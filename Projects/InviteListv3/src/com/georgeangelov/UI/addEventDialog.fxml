<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane fx:id="addEventDialog" xmlns:fx="http://javafx.com/fxml" fx:controller="com.georgeangelov.AddEventDialogController">
    <headerText>
        Enter the information for the new Participant
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">

            <Label text="Enter Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Enter Date" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dateField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Enter Address" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="addressField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Enter Time" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="timeField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        </GridPane>
    </content>
</DialogPane>
